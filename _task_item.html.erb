<div class="row task-row clearfix">
	<% if task_item.completed? %>
		<div class="complete">
			<%= link_to complete_task_list_task_item_path(@task_list, task_item.id), method: :patch do  %>
			<i style="opacity: 0.5;" class="fa fa-check"> </i>
			<% end %>
		</div>
		<div class="task_item">
			<p style="opacity: 0.5;"><strike><%= task_item.content %> </strike></p>
		</div>
		<div class="trash">
		<%= link_to task_list_task_item_path(@task_list, task_item.id), method: :delete, data: { confirm: "Are you sure?"} do  %>
			<i class="fa fa-trash"> </i>
		<% end %>
		</div>
		<% else %>
		<div class="complete">
			<%= link_to complete_task_list_task_item_path(@task_list, task_item.id), method: :patch do  %>
			<i class="fa fa-check"> </i>
			<% end %>
		</div>
		<div class="task_item">
			<p><%= task_item.content %></p>
		</div>
		<div class="trash">
		<%= link_to task_list_task_item_path(@task_list, task_item.id), method: :delete, data: { confirm: "Are you sure?"} do  %>
			<i class="fa fa-trash"> </i>
		<% end %>
		</div>
		<% end %>
</div>